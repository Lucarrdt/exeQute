{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["jest"],
    "paths": {
      "@domain/*": ["../domain/src/*"],
      "@infrastructure/*": ["../infrastructure/src/*"],
      "@application/*": ["../application/src/*"],
      "@api/*": ["../api/src/*"],
      "@client/*": ["../client/src/*"],
      "@shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
